{
    # Automatically generate and trust local HTTPS certificates.
    local_certs
}

# Relying Party (RP) Demo
fedcm-rp-demo.localhost {
    reverse_proxy localhost:8080
    log {
        output stdout
        format json
    }
}

# Identity Provider 1 (IdP-1) Demo
fedcm-idp-demo.localhost {
    reverse_proxy localhost:8081
    log {
        output stdout
        format json
    }
}

# Identity Provider 2 (Another IdP) Demo
fedcm-another-idp-demo.localhost {
    reverse_proxy localhost:8082
    log {
        output stdout
        format json
    }
}